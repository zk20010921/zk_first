/* 水平间距 */
.app {
  background-color: red;
}
.top_background {
  background-color: rgba(253, 214, 30, 0.8);
}
.top_icon {
  color: #ffffff;
}
.search {
  display: flex;
  position: fixed;
  top: 0;
  flex-direction: row;
  align-items: center;
  padding-left: 20rpx;
  z-index: 1;
  height: 100rpx;
  width: 100%;
  padding-top: 50rpx;
}
.search .search_ipt {
  width: 430rpx;
  height: 67rpx;
  border-radius: 100rpx;
  background-color: #ffffff;
  margin-left: 25rpx;
  display: flex;
  align-items: center;
  padding-left: 30rpx;
  color: #afafaf;
  font-size: 22rpx;
}
.search .search_ipt .uni-mt-10 {
  height: 10rpx;
}
.swiperlist swiper {
  height: 480rpx;
}
.swiper-item,
image {
  width: 100%;
  height: 100%;
}
.cate {
  width: 95%;
  background-color: #ffffff;
  display: flex;
  justify-content: space-around;
  align-items: center;
  margin: 0 auto;
  border-radius: 10rpx;
  margin-top: 40rpx;
  height: 250rpx;
}
.cate .catelist .cateurl {
  display: flex;
  flex-direction: column;
  align-items: center;
  font-size: 27rpx;
  justify-content: center;
}
.cate .catelist .cateurl text {
  display: inline-block;
  height: 20px;
  padding-top: 24rpx;
}
.cate .catelist image {
  height: 90rpx;
  width: 90rpx;
}
.jxwp {
  width: 95%;
  padding-top: 40rpx;
  margin: 0 auto;
  height: 410rpx;
}
.jxwp .bd_list {
  margin-right: 15rpx;
  margin-left: 5rpx;
  margin-top: 30rpx;
  height: 300rpx;
}
.jxwp .bd_text {
  width: 210rpx;
  height: 40rpx;
  font-size: 26rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.jxwp .bd_text image {
  width: 30rpx;
  height: 30rpx;
  margin-right: 5rpx;
  display: inline-block;
}
.jxwp .one,
.cnxh .one {
  font-weight: 600;
  color: #545454;
  font-size: 33rpx;
}
.cnxh {
  width: 95%;
  margin: 0 auto;
}
.cnxh .cnxh_list {
  width: 100%;
  margin: 1vh 1vw;
  padding-bottom: 150rpx;
  font-size: 26rpx;
}
.cnxh .cnxh_list .tx {
  height: 64rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  background-color: #ffffff;
  margin-top: -10rpx;
  padding-bottom: 6rpx;
  padding-left: 10rpx;
  padding-right: 10rpx;
}
.cnxh .cnxh_list .cnxh_price {
  display: flex;
  justify-content: space-between;
  padding: 0 5rpx;
  background-color: #ffffff;
  padding-top: 20rpx;
  padding-bottom: 35rpx;
}
.cnxh .cnxh_list .cnxh_price .cnxh_left text:nth-child(1) {
  font-size: 24rpx;
  color: red;
}
.cnxh .cnxh_list .cnxh_price .cnxh_left text:nth-child(2) {
  font-size: 28rpx;
  color: red;
}
.cnxh .cnxh_list .cnxh_price .cnxh_right {
  font-size: 22rpx;
  padding-right: 15rpx;
  color: #a6a6a6;
}

