/* 商品列表 */
.goods-list {
  display: flex;
  flex-wrap: wrap;
  padding: 0 30rpx;
  background: #fff;
}
.goods-list .goods-item {
  display: flex;
  padding: 20rpx 0;
  border-bottom: 1px solid #eee;
}
.goods-list .image-wrapper {
  width: 200rpx;
  height: 200rpx;
  border-radius: 3px;
  overflow: hidden;
}
.goods-list .image-wrapper image {
  width: 200rpx;
  height: 200rpx;
  opacity: 1;
}
.goods-list .title {
  line-height: 50rpx;
}
.goods-list .price-box {
  font-size: 24rpx;
  flex: 1;
  padding-left: 10px;
  display: flex;
  flex-wrap: wrap;
}
.goods-list .price {
  line-height: 1;
}

